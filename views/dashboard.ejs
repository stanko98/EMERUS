<%- include('partials/header', { title: 'Moj Tjedni Plan - Emerus Kuhinja' }) %>

<h2 class="page-title">Popis jela za tjedan (<%= currentWeekDisplay %>):</h2>

<!-- Navigacija kroz tjedne -->
<div class="week-navigation" style="margin: 20px 0; display: flex; justify-content: space-between; align-items: center; padding-bottom: 15px; border-bottom: 1px solid var(--border-color, #eee);">
    <% if (prevWeekLink) { %><a href="<%= prevWeekLink %>" class="button button-small">« Prethodni tjedan</a><% } else { %><span style="visibility: hidden;"><a class="button button-small">« Prethodni tjedan</a></span><% } %>
    <span style="font-weight: bold; color: var(--text-color, #333);">Odabir Tjedna</span>
    <% if (nextWeekLink) { %><a href="<%= nextWeekLink %>" class="button button-small">Sljedeći tjedan »</a><% } else { %><span style="visibility: hidden;"><a class="button button-small">Sljedeći tjedan »</a></span><% } %>
</div>

<!--OPISNE PORUKE NA VRHU -->
<% if (isCurrentWeek) { %>
    <% if (isMenuPublished) { %><p class="page-description" style="color: var(--primary-color); font-weight: bold;">Tekući tjedan</p><% } else { %><p class="page-description" style="color: #e67e22; font-weight:bold;">Jelovnik za tekući tjedan još nije službeno objavljen</p><% } %>
<% } else if (isFutureWeek) { %><p class="page-description" style="color: var(--primary-color); font-weight: bold;">Glasajte za idući tjedan !!</p><% } else { %><p class="page-description" style="color: var(--primary-color); font-weight: bold;">Prikaz objavljenog jelovnika za odabrani prošli tjedan</p><% } %>

<% if (typeof message !== 'undefined' && message) { %><p class="message success-message"><%= message %></p><% } %>
<% if (typeof error !== 'undefined' && error) { %><p class="message error-message"><%= error %></p><% } %>

<form action="/dashboard" method="POST" class="meal-form">
    <input type="hidden" name="week_of_choices" value="<%= weekForForm %>">
    <% if (workWeekDays && workWeekDays.length > 0) { %>
        <% workWeekDays.forEach((day, index) => { %>
            <%
                const dayKey = day.dayKey;
                const menuItem = displayedMenu[dayKey];
                const dayOfWeekNumeric = index + 1;
                const userChoiceForThisDay = userChoices[dayOfWeekNumeric];
                let dayDisplayName = (menuItem && menuItem.name) ? menuItem.name : (locals.DAY_DISPLAY_NAMES[dayKey] || dayKey.toUpperCase());
            %>
            
            <div class="day-card">
                <h3><%= dayDisplayName %> (<%= formatDateToDDMMYYYY(day.date) %>)</h3>
                
                <%# --- KONAČNA ISPRAVLJENA LOGIKA --- %>
                <% if (isMenuPublished) { %>
                    <%# A. Ako je jelovnik OBJAVLJEN za ovaj tjedan... %>
                    <% if (menuItem && menuItem.no_offer_today) { %>
                        <%# ...i ako je označeno "Nema ponude", prikaži SPECIJALNU crvenu poruku. %>
                        <p class="admin-info-italic no-offer-message" style="color: red; font-weight: bold; text-align: center;">
    Nema ponude jela za ovaj dan - kuhinja ne radi.
</p>
                    <% } else if ((isCurrentWeek || isFutureWeek) && menuItem && menuItem.meal_1) { %>
                        <%# ...ili ako se može glasati, prikaži opcije za glasanje. %>
                        <%# (Ovdje ide vaša postojeća logika za radio gumbe i drugu smjenu) %>
                        <div class="meal-option radio-option">
                           <input type="radio" id="choice_<%= day.dateString %>_1" name="choices[<%= day.dateString %>]" value="1" onchange="handleChoiceChange('<%= day.dateString %>')" <%= (userChoiceForThisDay && userChoiceForThisDay.option === 1) ? 'checked' : '' %>>
                           <label for="choice_<%= day.dateString %>_1"><strong>1)</strong> <%- menuItem.meal_1 %></label>
                        </div>
                        <% if (menuItem.has_two_options && menuItem.meal_2) { %>
                           <div class="meal-option radio-option">
                               <input type="radio" id="choice_<%= day.dateString %>_2" name="choices[<%= day.dateString %>]" value="2" onchange="handleChoiceChange('<%= day.dateString %>')" <%= (userChoiceForThisDay && userChoiceForThisDay.option === 2) ? 'checked' : '' %>>
                               <label for="choice_<%= day.dateString %>_2"><strong>2)</strong> <%- menuItem.meal_2 %></label>
                           </div>
                        <% } %>
                        <div class="choice-actions <%= (userChoiceForThisDay && userChoiceForThisDay.option) ? '' : 'hidden' %>" id="actions_<%= day.dateString %>">
                            <div class="second-shift-checkbox"><input type="checkbox" id="shift_<%= day.dateString %>" name="shifts[<%= day.dateString %>]" <%= (userChoiceForThisDay && userChoiceForThisDay.isSecondShift) ? 'checked' : '' %>><label for="shift_<%= day.dateString %>">Označite za drugu smjenu</label></div>
                            <button type="button" class="button-small button-link-style" onclick="clearChoice('<%= day.dateString %>')">Poništi odabir</button>
                        </div>
                    <% } else { %>
                        <%# ...ili ako je prošli tjedan, prikaži povijest odabira. %>
                        <p class="user-choice-past">Vaš odabir je bio: <strong><%= (userChoiceForThisDay && userChoiceForThisDay.description) ? userChoiceForThisDay.description : 'Niste imali odabir' %></strong><% if (userChoiceForThisDay && userChoiceForThisDay.isSecondShift) { %> (2. smjena)<% } %></p>
                    <% } %>
                <% } else { %>
                    <%# B. Ako jelovnik NIJE objavljen za ovaj tjedan, prikaži STANDARDNU, neutralnu poruku. %>
                    <p class="admin-info-italic" style="text-align: center;">Jelovnik za ovaj dan nije dostupan.</p>
                <% } %>
            </div>
        <% }); %>
    <% } %>

    <% if ((isCurrentWeek || isFutureWeek) && isMenuPublished) { %> 
        <button type="submit" class="save-button">Spremi Sve Odabire</button>
    <% } %>
</form>

<!-- ISPRAVAN <style> BLOK -->
<style>
    .choice-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid #f0f0f0;
    }
    .second-shift-checkbox {
        display: flex;
        align-items: center;
    }
    .second-shift-checkbox label {
        margin-left: 8px;
        font-size: 0.9em;
        color: #555;
        cursor: pointer;
    }
    .hidden {
    display: none;
}
</style>

<script>
    function handleChoiceChange(dateString) {
    const actionsDiv = document.getElementById(`actions_${dateString}`);
    if (actionsDiv) {
        actionsDiv.classList.remove('hidden');
    }
}

    function clearChoice(dateString) {
    // ...
    const actionsDiv = document.getElementById(`actions_${dateString}`);
    if (actionsDiv) {
        actionsDiv.classList.add('hidden');
    }
        
        const shiftCheckbox = document.getElementById(`shift_${dateString}`);
        if(shiftCheckbox) {
            shiftCheckbox.checked = false;
        }
    }
</script>

<%- include('partials/footer') %>